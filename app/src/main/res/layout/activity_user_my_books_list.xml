<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserMyBooksListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDemo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background" />

        <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginLeft="@dimen/toolbarMargin"
            android:layout_marginRight="@dimen/toolbarMargin"
            android:orientation="horizontal">

            <!--
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/admin_profilePicture"
                    android:layout_width="60sp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:padding="@dimen/inner_pad"
                    android:src="@drawable/icon_user_profile_24dp"
                    app:civ_border_color="@color/imageView_border_color"
                    app:civ_border_width="@dimen/image_border"
                    tools:ignore="VectorDrawableCompat" />

                -->
            <TextView
                android:id="@+id/toolbarTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="My Book Name"
                android:textColor="@color/toolbar_text_color"
                android:textIsSelectable="true"
                android:textSize="@dimen/toolbar_text" />


        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/lay_pad"
                android:orientation="vertical"
                android:padding="@dimen/text_pad">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:orientation="vertical"
                    android:padding="@dimen/text_pad">

                    <TextView
                        android:id="@+id/myBofoksName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book Name"
                        android:textColor="@color/blue_color"
                        android:textSize="@dimen/normal_text" />
                    <TextView
                        android:id="@+id/myBooksName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/inner_pad"
                        android:text="Book Full Name"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/inner_pad"
                        android:paddingTop="@dimen/inner_pad"
                        android:text="Writer"
                        android:textColor="@color/blue_color"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/myBooksAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/lay_pad"
                        android:paddingRight="@dimen/inner_pad"
                        android:paddingBottom="@dimen/inner_pad"
                        android:text="1. Name 1\n2. Name 2\n3. Name 3"
                        android:textSize="@dimen/normal_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:orientation="vertical"
                    android:padding="@dimen/text_pad">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/myBooksEdition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/inner_pad"
                            android:text="x'th edition"
                            android:textSize="@dimen/small_text" />

                        <TextView
                            android:id="@+id/myBooksRemainingTIme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="@dimen/inner_pad"
                            android:text="14 Days Remaining"
                            android:textSize="@dimen/small_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/myBooksPodsition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@color/blue_color"
                        android:textSize="@dimen/normal_text" />
                    <TextView
                        android:id="@+id/myBooksPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/inner_pad"
                        android:text="Position"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/button_pad">

                <Button
                    android:id="@+id/myBooksIncreaseTimeBtn"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/inner_pad"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Increase Time"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/button_text" />

                <Button
                    android:id="@+id/myBooksReturnBtn"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inner_pad"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Return"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/button_pad"
                android:paddingRight="@dimen/button_pad"
                android:paddingBottom="@dimen/button_pad">

                <Button
                    android:id="@+id/myBooksContactLibrarianBtn"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Contact Librarian"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/button_text" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>